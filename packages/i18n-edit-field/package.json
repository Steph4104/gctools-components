{
  "name": "@gctools-components/i18n-edit-field",
  "description": "Editable label that turns into 2 text boxes upon entering edit mode. One text box for English and one for French. The label (when not in edit mode) displays the value from the currently selected language.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gctools-outilsgc/gctools-components.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "babel index.js -d dist --copy-files",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint .",
    "test": "jest --rootDir . --config ./node_modules/@gctools-components/jest-config/index.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "gctools",
    "gctoolscomponent"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.10",
    "@storybook/addon-info": "^3.3.10",
    "@storybook/addon-links": "^3.3.10",
    "@storybook/addon-storyshots": "^3.3.10",
    "@storybook/react": "^3.3.10",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-plugin-react-docgen": "~1.8.1",
    "@gctools-components/eslint-config": "^1.0.0",
    "eslint": "^4.12.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "@gctools-components/jest-config": "^1.0.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.2.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "clean-webpack-plugin": "^0.1.19",
    "autoprefixer": "^8.2.0",
    "postcss-flexbugs-fixes": "^3.3.0",
    "react-dev-utils": "^5.0.0",
    "style-loader": "^0.20.3",
    "css-loader": "^0.28.11",
    "url-loader": "^1.0.1",
    "file-loader": "^1.1.11",
    "jest-cli": "^22.4.3"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "semantic-ui-react": "^0.79.0",
    "semantic-ui-css": "^2.3.1",
    "prop-types": "^15.6.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "babel-plugin-transform-runtime",
      "transform-object-rest-spread",
      [
        "react-docgen",
        {
          "includeMethods": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "@gctools-components",
    "root": true
  }
}