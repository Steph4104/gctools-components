{
  "name": "@gctools-components/recommendation-card",
  "description": "NRC recommendation card component",
  "version": "1.1.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gctools-outilsgc/gctools-components.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "copyfiles img/* css/* fonts/* dist && babel index.js src/* -d dist --copy-files",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint .",
    "test": "jest --rootDir . --config ./node_modules/@gctools-components/jest-config/index.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "nrc"
  ],
  "author": {
    "name": "Luc Belliveau",
    "email": "luc.belliveau@nrc-cnrc.gc.ca"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@gctools-components/eslint-config": "^1.1.0",
    "@gctools-components/jest-config": "^1.1.0",
    "@storybook/addon-actions": "^3.2.13",
    "@storybook/addon-info": "^3.2.13",
    "@storybook/addon-links": "^3.2.13",
    "@storybook/addon-storyshots": "^3.2.13",
    "@storybook/react": "^3.3.0-alpha.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-react-docgen": "~1.8.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "copyfiles": "~1.2.0",
    "eslint": "^4.12.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.5",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@gctools-components/phrase-cloud": "^1.1.0",
    "font-awesome": "^4.7.0",
    "material-ui": "^0.19.4",
    "material-ui-community-icons": "^0.15.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-apollo": "^2.0.1",
    "react-circular-progressbar": "^0.6.0",
    "react-d3-cloud": "^0.5.0",
    "react-dom": "^16.0.0",
    "react-dotdotdot": "^1.1.0",
    "react-fontawesome": "^1.6.1",
    "react-masonry-component": "^6.0.1",
    "react-star-rating-component": "^1.3.0",
    "react-tooltip": "^3.4.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "babel-plugin-transform-runtime",
      "transform-object-rest-spread",
      [
        "react-docgen",
        {
          "includeMethods": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "@gctools-components",
    "root": true
  }
}